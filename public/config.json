{
  "workflowApiVersion": "1.1",
  "metaData": {
    "icon":     "https://custom-activity-sfmc-beryl.vercel.app/icon.svg",
    "category": "custom"
  },
  "type": "RestDecision",
  "lang": {
    "en-US": {
      "name":        "Email Block Checker",
      "description": "Blocca o fa proseguire in base a singole email o dominio"
    }
  },
  "outcomes": [
    {
      "arguments":   { "branchResult": "allowed" },
      "metaData":    { "label": "Allowed" }
    },
    {
      "arguments":   { "branchResult": "blocked" },
      "metaData":    { "label": "Blocked" }
    }
  ],
  "arguments": {
    "execute": {
      "inArguments": [
        { "EmailAddress": "" },
        { "SingleEmails": "" },
        { "DomainList": "" }
      ],
      "url":     "https://custom-activity-sfmc-beryl.vercel.app/api/execute",
      "verb":    "POST",
      "timeout": 10000
    },
    "save": {
      "url":     "https://custom-activity-sfmc-beryl.vercel.app/api/save",
      "verb":    "POST",
      "timeout": 10000
    }
  },
  "configurationArguments": {
    "validate": { "url": "https://custom-activity-sfmc-beryl.vercel.app/api/validate" },
    "publish":  { "url": "https://custom-activity-sfmc-beryl.vercel.app/api/publish" }
  },
  "userInterfaces": {
    "configModal": {
      "url":        "https://custom-activity-sfmc-beryl.vercel.app/config.html",
      "height":     600,
      "fullscreen": false
    }
  }
}

